{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "lib": [
      "ES2021.String",
      "DOM"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@api/*": [
        "apps/api/src/*"
      ],
      "@libs/schemas/*": [
        "libs/schemas/src/*"
      ],
      "@libs/entities/*": [
        "libs/core/src/*"
      ]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "target": "es2017"
  }
}
